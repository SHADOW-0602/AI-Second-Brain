# Required: Qdrant Vector Database
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_COLLECTION_NAME=second_brain
SEARCH_SCORE_THRESHOLD=0.6

# Performance Optimization
TF_ENABLE_ONEDNN_OPTS=0
HF_HUB_DISABLE_SYMLINKS_WARNING=1

# Optional: Cloudflare R2 Storage Configuration
R2_ENDPOINT=your_r2_endpoint
R2_BUCKET_NAME=your_bucket_name
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_PUBLIC_URL=your_public_url

# Required: AI API Keys
MISTRAL_API_KEY=your_mistral_api_key
MISTRAL_MODEL=mistral-small-latest
AI_PROVIDER=mistral
GROQ_API_KEY=your_groq_api_key
GEMINI_API_KEY=your_gemini_api_key
COHERE_API_KEY=your_cohere_api_key

# Chat Configuration
CHAT_TITLE_LIMIT=1
CHAT_TITLE_TEMPERATURE=0.3
CHAT_TITLE_MAX_TOKENS=20
CHAT_TITLE_PREFIX=CHAT_TITLE
CHAT_HISTORY_LIMIT=50
CHAT_SESSIONS_LIMIT=20

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=5300

# Processing Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
CHUNK_SIZE=512
CHUNK_OVERLAP=64
MIN_CHUNK_SIZE=50
BATCH_SIZE=50
VECTOR_SIZE=384

# Database Configuration
DB_TIMEOUT=30
DB_RETRY_ATTEMPTS=3
DB_CONNECTION_POOL_SIZE=10

# Analytics Configuration
ANALYTICS_SEARCH_COLLECTION=analytics_search_history
ANALYTICS_FILE_ACCESS_COLLECTION=analytics_file_access
ANALYTICS_METRICS_COLLECTION=analytics_usage_metrics

# Cleanup Configuration
CLEANUP_DAYS_OLD=30
CLEANUP_BATCH_SIZE=1000

# Optional: LangSmith Configuration
LANGCHAIN_API_KEY=your_langsmith_api_key
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=livingos-ai